<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="V k R o l l"
            android:textSize="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:textStyle="bold"

           ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ссылка:"
                android:layout_weight="2"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:background="@color/blue"
                android:textColor="@color/white"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:id="@+id/link_1"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:textSize="15dp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Действие:"
                android:layout_weight="2"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_marginTop="100px"

                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Репост"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание:"
                android:layout_weight="2"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_marginTop="100px"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:layout_weight="1"
                android:id="@+id/write_1"
                android:textColor="@color/black"
                android:layout_marginTop="100px"></EditText>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:text="Создать"
                android:id="@+id/make_1"
                android:textSize="30dp"
                android:background="@color/blue"
                android:textColor="@color/white"></Button>

        </LinearLayout>



    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/blue"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Моя запись"
                android:id="@+id/Create"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Лента"
                android:id="@+id/Scroll"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="15dp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Жалоба"
                android:id="@+id/Report"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="15dp"></Button>
        </LinearLayout>


    </LinearLayout>

